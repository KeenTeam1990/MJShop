/* pages/user/user.wxss */
.user_base_info{
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  padding: 80rpx 0;
  justify-content: center;
  font-size: 35rpx;

}
.user_avatar{
  width: 200rpx;
  height: 200rpx;
  margin-right: 60rpx;
}
.user_avatar image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.user_avatar image:hover{
  opacity: 0.5;
}
.user_info{
  line-height: 40rpx;
}
.uer_addr_message{
  width: 100%;
  padding: 40rpx 0;
}

.user_addr_title{
  font-size: 35rpx;
  padding: 20rpx;
}
.user_addr_item{
  padding:20rpx 40rpx;
}
.addr_sub{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  padding:15rpx;
  border: 2rpx solid #ccc;
  margin-top: 30rpx; 
}
.addr_sub:hover{
  background: #ddd;
  color: red;
}
.btn{
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}