/* pages/book/book.wxss */
.ar_coverpath{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 0;
  box-sizing: border-box;
}
.ar_coverpath image{
  width: 100%;
  height: 390rpx;
  display: block;
}
.ar_picker{
  font-size: 32rpx;
  color: #000;
  margin: 0;
}
.ar_cont_h1{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 64rpx;
  padding: 20rpx 20rpx;
}
.ar_cont_wrap{
  width: 670rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
  padding: 20rpx;
  margin: 20rpx auto;
  font-size: 30rpx;
}
.ar_date_time{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin: 30rpx 0rpx 60rpx;
  justify-content: space-between;
}
.ar_date_time .ar_date,.ar_time{
 width: 47%;
 display: flex;
 flex-direction: row;
 justify-content: space-around;
}
.ar_date image{
  width: 50rpx;
  height: 50rpx;
}
.ar_time image{
  width: 50rpx;
  height: 50rpx;
}
.ar_date_time picker{
  width: 220rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0rpx 10rpx;
}
.msg_input{
 border: 1rpx solid #ddd;
 border-radius: 8rpx;
 pad: 8rpx 10rpx;
 margin: 30rpx;
 padding-left: 20rpx;
 font-size: 30rpx;
}
.ar_book{
  background: #d24a58;
  font-size: 32rpx;
  color: #fff;
  border-radius: 0rpx;
  margin: 80rpx 10rpx 10rpx;
}